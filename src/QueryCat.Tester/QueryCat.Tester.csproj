<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Description>The standalone console app to load plugins for debug and testing.</Description>
    <Nullable>enable</Nullable>
    <AssemblyName>qcattester</AssemblyName>
    <Product>QueryCat Tester</Product>
    <Copyright>Copyright (c) 2022-2025</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="QueryCat" Version="0.15.0" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta6.25358.103" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="9.0.7" />
  </ItemGroup>

</Project>
